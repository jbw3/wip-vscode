{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "WIP",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#function_definition"
		},
		{
			"include": "#constants_bool"
		},
		{
			"include": "#constants_int"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#types"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.line.wip",
				"match": "#.*"
			}]
		},
		"constants_bool": {
			"patterns": [{
				"name": "constant.language.wip",
				"match": "\\b(false|true)\\b"
			}]
		},
		"constants_int": {
			"patterns": [{
				"name": "constant.language.wip",
				"match": "\\b(0[Bb][01]+|0[Oo][0-7]+|[0-9]+|0[Xx][0-9A-Fa-f]+)\\b"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.wip",
				"match": "\\b(else|fun|if)\\b"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator.wip",
				"match": "==|!=|<=|>=|\\+|-|\\*|/|%|&|\\||\\^|!|<|>"
			}]
		},
		"types": {
			"patterns": [{
				"name": "storage.type.wip",
				"match": "\\b(bool|i32)\\b"
			}]
		},
		"function_definition": {
			"begin": "fun",
			"end": "{",
			"beginCaptures": {
				"0": { "name": "keyword.control.wip" }
			},
			"name": "meta.function.definition.wip",
			"patterns": [{
				"include": "#comments"
			},
			{
				"include": "#types"
			},
			{
				"begin": "\\b([_a-zA-Z][_a-zA-Z0-9]*) *\\(",
				"end": "\\)",
				"beginCaptures": {
					"1": { "name": "entity.name.function.wip" }
				},
				"name": "meta.function.definition.parameters.wip",
				"patterns": [{
					"include": "#comments"
				},
				{
					"include": "#types"
				}]
			}]
		}
	},
	"scopeName": "source.wip"
}
